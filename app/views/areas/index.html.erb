<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-4">

  </div>
  <div class="col-5">
    <div class="card index">
      <h1 class="text-center">Areas</h1>
      <hr>
      <div class="container">
        <table>
          <thead>
            <tr>
              <th>Nombre</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @areas.each do |area| %>
              <tr>
                <td class="pr-5"><%= area.name %></td>
                <td><%= link_to 'Ver', area, class:'btn btn-dark ml-5' %></td>
                <td><%= link_to 'Editar', edit_area_path(area), class:'btn btn-dark ml-2' %></td>
                <td><%= link_to 'Eliminar', area, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-dark ml-2' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>
        <hr>
      </div>
      <hd><%= link_to 'Nueva area', new_area_path, class:'btn btn-dark ml-3' %>
    </div>
  </div>
</div>
